<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ej03.LetrasViewController">
   <top>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Letras:" />
            <TextField fx:id="letras" alignment="CENTER" editable="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></TextField>
            <Label text="Palabra:" />
            <TextField fx:id="palabras" alignment="CENTER" onKeyReleased="#onKeyRelease" style="-fx-background-color: lightgreen;" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <Button fx:id="generar" mnemonicParsing="false" onAction="#onGenerar" text="Generar" />
            <Button fx:id="comprobar" mnemonicParsing="false" onAction="#onComprobar" text="Comprobar" />
            <Button fx:id="salir" mnemonicParsing="false" onAction="#onSalir" text="Salir" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
