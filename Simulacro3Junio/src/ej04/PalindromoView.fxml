<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ej04.PalindromoViewController">
   <top>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Introduce tu frase:" />
            <TextField fx:id="frase" />
            <Label fx:id="resultado" text="Resultado..." />
            <CheckBox fx:id="blancos" mnemonicParsing="false" selected="true" text="Despreciar blancos y Mayusculas" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <Button fx:id="comprobar" mnemonicParsing="false" onAction="#onComprobar" text="Comprobar" />
            <Button fx:id="salir" mnemonicParsing="false" onAction="#onSalir" text="Salir" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
