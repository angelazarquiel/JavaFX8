<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ej03.DadoViewController">
   <top>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Ha salido:" />
            <TextField fx:id="resultado" alignment="CENTER" editable="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></TextField>
            <HBox spacing="10.0">
               <children>
                  <Label text="Caras:" />
                  <TextField fx:id="caras" alignment="CENTER_RIGHT" text="6" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <Button fx:id="tirar" mnemonicParsing="false" onAction="#onTirar" text="Tirar" />
            <Button fx:id="salir" mnemonicParsing="false" onAction="#onSalir" text="Salir" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
